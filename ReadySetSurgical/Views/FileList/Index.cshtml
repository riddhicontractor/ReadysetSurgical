@{
    ViewData["Title"] = "File List";
    string[] TableHeaders = new string[] { 
       "Id"
      ,"File Name"
      ,"Invoice Number"
      ,"Vendor Name"
      ,"Receiver Name"
      ,"Created At"
    };
}

<div class="row center">
    <div class="col">
        <h1>File List</h1>
    </div>
</div>
<br/>
<div class="row">
    <div class="col">
        <a asp-controller="FileList"
           asp-action="Index">Success Files</a>
        <a asp-controller="FileList"
           asp-action="Index1">Error Files</a>
    </div>
</div>
<br/>
<div class="table">
    <table class="table table-bordered table-hover center">
        <thead>
            <tr>
                @{
                    foreach(var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (var Data in Model)
                    {
                        <tr>
                            <td>@Data.Id</td>
                            <td>@Data.FileName</td>
                            <td>@Data.InvoiceNumber</td>
                            <td>@Data.VendorName</td>
                            <td>@Data.ReceiverName</td>
                            <td>@Data.CreatedAt</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>